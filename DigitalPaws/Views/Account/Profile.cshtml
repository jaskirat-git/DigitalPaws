@model DigitalPaws.Models.User

@{
    ViewData["Title"] = "Profile";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom Styles -->
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Poppins', sans-serif;
        }
        .profile-card {
            border-radius: 20px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            background: #ffffff;
        }
        .profile-card-header {
            background: linear-gradient(90deg, #4e73df, #1cc88a);
            color: white;
            text-align: center;
            padding: 1.5rem;
            border-radius: 20px 20px 0 0;
        }
        .profile-card-header h2 {
            margin: 0;
            font-weight: 600;
        }
        .form-label {
            font-weight: 600;
            color: #343a40;
        }
        .form-control {
            border-radius: 10px;
            border: 1px solid #ced4da;
            box-shadow: none;
        }
        .form-control:focus {
            border-color: #1cc88a;
            box-shadow: 0 0 5px rgba(28, 200, 138, 0.5);
        }
        .btn-primary {
            background: linear-gradient(90deg, #4e73df, #1cc88a);
            border: none;
            border-radius: 10px;
            transition: all 0.3s ease-in-out;
        }
        .btn-primary:hover {
            background: #1cc88a;
        }
        .card-footer {
            text-align: center;
            background: #f8f9fa;
            border-top: none;
            padding: 1rem;
            border-radius: 0 0 20px 20px;
        }
        .card-footer a {
            text-decoration: none;
            color: #4e73df;
            font-weight: 600;
        }
        .card-footer a:hover {
            color: #1cc88a;
        }
    </style>
</head>
<body>
    <div class="container d-flex align-items-center justify-content-center vh-100">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <div class="card profile-card">
                <!-- Header -->
                <div class="profile-card-header">
                    <h2>Your Profile</h2>
                </div>
                <!-- Form Body -->
                <div class="card-body p-4">
                    <form asp-action="Profile" method="post">
                        <input type="hidden" asp-for="Id" />
                        <!-- Name Field -->
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label">Full Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter your full name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <!-- Email Field -->
                        <div class="mb-4">
                            <label asp-for="Email" class="form-label">Email Address</label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email address" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <!-- Mobile Number Field -->
                        <div class="mb-4">
                            <label asp-for="MobileNumber" class="form-label">Mobile Number</label>
                            <input asp-for="MobileNumber" class="form-control" placeholder="Enter your mobile number" />
                            <span asp-validation-for="MobileNumber" class="text-danger"></span>
                        </div>
                        <!-- Address Field -->
                        <div class="mb-4">
                            <label asp-for="Address" class="form-label">Address</label>
                            <textarea asp-for="Address" class="form-control" placeholder="Enter your address"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary w-100 py-2">Update Profile</button>
                    </form>
                </div>
                <!-- Footer -->
                <div class="card-footer">
                    <p class="mb-0">Need help? <a href="/Support">Contact Support</a></p>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
