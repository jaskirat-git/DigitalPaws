@model DigitalPaws.Models.User

@{
	ViewData["Title"] = "Profile";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Profile</title>
	<!-- Bootstrap CSS -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
	<!-- Custom CSS -->
	<style>
		body {
			background: linear-gradient(to right, #1cc88a, #2575fc);
			color: #fff;
			font-family: 'Roboto', sans-serif;
		}

		.form-label {
			font-weight: bold;
			color: #343a40; /* If you want to keep the text color as well */
		}

		.card {
			border: none;
			border-radius: 15px;
			box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
		}

		.card-header {
			background: linear-gradient(to right, #1cc88a, #2575fc);
			color: white;
			padding: 1.5rem;
			border-radius: 15px 15px 0 0;
			text-align: center;
		}

			.card-header h2 {
				margin: 0;
				font-weight: 600;
			}

		.form-control:focus {
			border-color: #1cc88a;
			box-shadow: 0 0 8px rgba(106, 17, 203, 0.5);
		}

		.btn-primary {
			background-color: #1cc88a;
			border: none;
		}

			.btn-primary:hover {
				background-color: #2575fc;
			}

		.tooltip-inner {
			background-color: #fff;
			color: #1cc88a;
			font-size: 0.9rem;
		}

		.card-footer {
			text-align: center;
			background-color: white;
			padding: 1rem;
			border-radius: 0 0 15px 15px;
		}

			.card-footer a {
				color: #1cc88a;
				font-weight: 600;
			}

				.card-footer a:hover {
					color: #1cc88a;
				}

		footer {
			text-align: center;
			position: fixed;
			bottom: 0;
			width: 100%;
			padding: 10px 0;
			background: white;
			color: black;
			font-size: 0.9rem;
		}
	</style>
</head>
<body>
	<div class="container d-flex justify-content-center align-items-center vh-100">
		<div class="card shadow-lg p-5" style="width: 100%; max-width: 500px;">
			<div class="card-header">
				<h2>Your Profile</h2>
			</div>
			@if (TempData["SuccessMessage"] != null)
			{
				<div class="alert alert-success alert-dismissible fade show" role="alert">
					@TempData["SuccessMessage"]
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			}
			<form asp-action="Profile" method="post">
				<input type="hidden" asp-for="Id" />

				<!-- Name -->
				<div class="mb-3 position-relative">
					<label asp-for="Name" class="form-label">Full Name</label>
					<input asp-for="Name" class="form-control" placeholder="Enter your full name" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>

				<!-- Email -->
				<div class="mb-3 position-relative">
					<label asp-for="Email" class="form-label">Email Address</label>
					<input asp-for="Email" class="form-control" placeholder="Enter your email address" />
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>

				<!-- Mobile Number -->
				<div class="mb-3 position-relative">
					<label asp-for="MobileNumber" class="form-label">Mobile Number</label>
					<input asp-for="MobileNumber" class="form-control" placeholder="Enter your mobile number" />
					<span asp-validation-for="MobileNumber" class="text-danger"></span>
				</div>

				<!-- Address -->
				<div class="mb-3 position-relative">
					<label asp-for="Address" class="form-label">Address</label>
					<textarea asp-for="Address" class="form-control" placeholder="Enter your address"></textarea>
					<span asp-validation-for="Address" class="text-danger"></span>
				</div>

				<!-- Username -->
				<div class="mb-3 position-relative">
					<label asp-for="Username" class="form-label">Username</label>
					<input asp-for="Username" class="form-control" placeholder="Choose your username" />
					<span asp-validation-for="Username" class="text-danger"></span>
				</div>

				<!-- Password -->
				<div class="mb-3 position-relative">
					<label asp-for="Password" class="form-label">Password</label>
					<div class="input-group">
						<input asp-for="Password" class="form-control" value="@Model.Password" placeholder="Enter your password" id="passwordField" />
						<button type="button" class="btn btn-outline-secondary" onclick="togglePassword()">
							<i class="bi bi-eye"></i>
						</button>
					</div>
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>

				<!-- Submit Button -->
				<div class="d-grid gap-2">
					<button type="submit" class="btn btn-primary btn-lg">Update Profile</button>
				</div>
			</form>

			<div class="card-footer">
				<p>Need help? <a href="@Url.Action("ContactSupport", "Support")">Contact Support</a></p>
			</div>
		</div>
	</div>

	<!-- Bootstrap JS -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

	<script>
		// Toggle password visibility
		function togglePassword() {
			const passwordField = document.getElementById('passwordField');
			const type = passwordField.type === 'password' ? 'text' : 'password';
			passwordField.type = type;
		}
	</script>
</body>
</html>