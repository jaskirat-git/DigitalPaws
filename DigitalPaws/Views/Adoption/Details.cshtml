@model DigitalPaws.Models.AdoptionModel

@{
    ViewData["Title"] = Model.Name + " - Pet Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        body {
            background: linear-gradient(to right, #1cc88a, #2575fc);
            color: #fff;
            font-family: 'Roboto', sans-serif;
        }
        .card {
            border: none;
            border-radius: 15px;
        }
        .form-control:focus {
            border-color: #6a11cb;
            box-shadow: 0 0 8px rgba(106, 17, 203, 0.5);
        }
        .btn-primary {
            background-color: #6a11cb;
            border: none;
        }
        .btn-primary:hover {
            background-color: #4c0f91;
        }
        .btn-secondary {
            background-color: #343a40;
            border: none;
        }
        .btn-secondary:hover {
            background-color: #23272b;
        }
        .btn-sm {
            font-size: 0.875rem;
        }
        .img-fluid {
            max-width: 100%;
            height: auto;
        }
        .container {
            padding-top: 2rem;
        }
        .card-body {
            background-color: #f8f9fa;
            border-radius: 10px;
        }
        .card-img-top {
            border-radius: 10px;
        }
        .text-muted {
            font-size: 1rem;
        }

        footer {
            text-align: center;
            position: fixed;
            bottom: 0;
            width: 100%;
            padding: 10px 0;
            background: white;
            color: black;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name">
            </div>
            <div class="col-md-6">
                <h2 class="text-primary">@Model.Name</h2>
                <p><strong>Breed:</strong> @Model.Breed</p>
                <p><strong>Owner:</strong> @Model.Owner</p>
                <p><strong>Contact:</strong> @Model.Contact</p>
                <p><strong>Price:</strong> @Model.Price</p>
                <p><strong>Availability:</strong> @(Model.IsAvailable ? "Available" : "Not Available")</p>

                <!-- Commented out for now, but can be used for conditional buttons -->
                @* @if (Model.IsAvailable) *@
                @* { *@
                @*     <a href="#" class="btn btn-primary">Adopt Now</a> *@
                @* } *@
                @* else *@
                @* { *@
                @*     <button class="btn btn-secondary" disabled>Not Available</button> *@
                @* } *@

                <a asp-controller="Adoption" asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script>
      
    </script>
</body>
</html>
