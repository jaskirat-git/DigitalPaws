@model DigitalPaws.Models.AdoptionModel

@{
	ViewData["Title"] = Model.Name + " - Pet Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewData["Title"]</title>

	<!-- Bootstrap CSS -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

	<!-- Custom CSS -->
	<style>
		body {
			background: linear-gradient(to right, #1cc88a, #2575fc);
			/* color: #fff; */
			font-family: 'Roboto', sans-serif;
		}

		.container {
			margin-top: 3rem;
		}

		.card {
			border: none;
			border-radius: 15px;
			background-color: #ffffff;
			color: #333;
			box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
		}

		.card-body {
			padding: 2rem;
		}

		.card-title {
			color: #2575fc;
			font-weight: bold;
		}

		.btn-primary {
			background-color: #2575fc;
			border: none;
		}

			.btn-primary:hover {
				background-color: #4c0f91;
			}

		.btn-secondary {
			background-color: #6c757d;
			border: none;
		}

			.btn-secondary:hover {
				background-color: #5a6268;
			}

		.badge-available {
			background-color: #28a745;
			color: white;
			font-size: 1rem;
			padding: 0.5em 1em;
			border-radius: 5px;
		}

		.badge-unavailable {
			background-color: #dc3545;
			color: white;
			font-size: 1rem;
			padding: 0.5em 1em;
			border-radius: 5px;
		}

		.pet-image {
			border-radius: 15px;
			max-width: 100%;
			height: auto;
		}
	</style>
</head>
<body>
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div class="card">
					<div class="row g-0">
						<div class="col-md-6">
							<img src="@Model.ImageUrl" class="img-fluid pet-image" alt="@Model.Name">
						</div>
						<div class="col-md-6">
							<div class="card-body">
								<h2 class="card-title">@Model.Name</h2>
								<p><strong>Breed:</strong> @Model.Breed</p>
								<p><strong>Owner:</strong> @Model.Owner</p>
								<p><strong>Contact:</strong> @Model.Contact</p>
								<p><strong>Price:</strong> @Model.Price</p>

								<p>
									<strong>Availability:</strong>
									@if (Model.IsAvailable)
									{
										<span class="badge badge-available">Available</span>
									}
									else
									{
										<span class="badge badge-unavailable">Not Available</span>
									}
								</p>

								<div class="mt-3">
									@if (Model.IsAvailable)
									{
										<a href="#" class="btn btn-primary">Adopt Now</a>
									}
									else
									{
										<button class="btn btn-secondary" disabled>Not Available</button>
									}
									<a asp-controller="Adoption" asp-action="Index" class="btn btn-outline-secondary ms-2">Back to List</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Bootstrap JS -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
