@{
    ViewData["Title"] = "Home Page";
}
<div class="container mt-5">
    <div class="card shadow p-4">
        <div class="text-center">
            <h1 class="display-4">Welcome To Pet World!</h1>
            <p>Where Pets meet their loved ones</p>

            <div class="row">
                <!-- Left Carousel -->
                <div class="col-md-6">
                    <div id="carouselExampleLeft" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner img-fluid rounded">
                            <div class="carousel-item active">
                                <img src="~/images/cat dog girl.jpg" class="d-block w-100 carousel-image" alt="Dog 1">
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/cat girl cover.jpg" class="d-block w-100 carousel-image" alt="Dog 2">
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/puppy cover page.jpeg" class="d-block w-100 carousel-image" alt="Dog 3">
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleLeft" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleLeft" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>

                <!-- Right Carousel -->
                <div class="col-md-6">
                    <div id="carouselExampleRight" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner img-fluid rounded">
                            <div class="carousel-item active">
                                <img src="~/images/dog3.jpg" class="d-block w-100 carousel-image" alt="Dog 1">
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/dog4.jpg" class="d-block w-100 carousel-image" alt="Dog 2">
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/puppy image.jpeg" class="d-block w-100 carousel-image" alt="Dog 3">
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleRight" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleRight" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                        </div>
                        <!-- Auto-moving, no buttons -->
                    </div>
                </div>
            </div>
        </div>
</div>

<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="text-center">Why We Love Pets</h2>
        <p class="lead text-center text-muted mb-4" style="font-size: 1.4rem; line-height: 1.8;">
            Pets bring endless joy, love, and companionship to our lives. They are more than just animals;
            they become part of our families, offering comfort, emotional support, and unconditional love.
            Whether you're cuddling with a dog after a long day or watching a cat chase after a toy, pets have
            the incredible ability to bring happiness into our homes.
        </p>
        <div class="row">
            <div class="col-md-6">
                <!-- Adjust the size of the image with custom class -->
                <img src="~/images/Roty.jpg" class="img-fluid rounded shadow" alt="Happy Cat" style="max-height: 400px; object-fit: cover;">
            </div>
            <div class="col-md-6">
                <!-- Adjust the size of the image with custom class -->
                <img src="~/images/Lab.jpg" class="img-fluid rounded shadow" alt="Happy Dog" style="max-height: 400px; object-fit: cover;">
            </div>
        </div>
        <div class="text-center mt-4">
            <a href="#" class="btn btn-primary btn-lg">Explore More About Pets</a>
        </div>
        <div class="text-center mt-3">
            <a asp-controller="Vets" asp-action="Index" class="btn btn-success">Find Nearby Vets</a>
        </div>
    </div>
</div>

