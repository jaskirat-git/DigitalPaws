@model Pet

@{
    ViewData["Title"] = "Add a New Pet";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - DigitalPaws</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

  
    <style>
        body {
            background: linear-gradient(90deg, #4e73df, #1cc88a);
            font-family: 'Poppins', sans-serif;
        }

        .add-pet-card {
            border: none;
            border-radius: 20px;
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

            .add-pet-card .card-header {
                background: linear-gradient(90deg, #4e73df, #1cc88a);
                color: white;
                text-align: center;
                padding: 20px;
            }

            .add-pet-card .form-control {
                border-radius: 10px;
                border-color: #ced4da;
            }

        .btn-primary {
            border-radius: 10px;
            background: linear-gradient(90deg, #4e73df, #1cc88a);
            border: none;
        }

            .btn-primary:hover {
                background: #1cc88a;
            }

        .form-check-label {
            font-size: 0.9rem;
        }

        .text-muted {
            font-size: 0.9rem;
        }

       
        .form-group {
            margin-bottom: 1.5rem;
        }
    </style>
</head>
<body>

    <!-- Main Content -->
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="col-lg-5 col-md-7 col-sm-10">
            <div class="card add-pet-card">
                <div class="card-header">
                    <h3 class="mb-0">Add a New Pet</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Add" method="post" enctype="multipart/form-data">
                        <!-- Pet Name -->
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-semibold">Pet Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter pet's name" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Category -->
                        <div class="mb-4">
                            <label asp-for="Category" class="form-label fw-semibold">Category</label>
                            <select asp-for="Category" class="form-control">
                                @foreach (var category in ViewBag.Categories)
                                {
                                    <option value="@category">@category</option>
                                }
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <!-- Profile Picture -->
                        <div class="form-group mb-4">
                            <label asp-for="DisplayPictureUrl" class="form-label">Profile Picture (Optional)</label>
                            <input type="file" asp-for="DisplayPictureUrl" class="form-control" />
                            <span asp-validation-for="DisplayPictureUrl" class="text-danger"></span>
                        </div>

                        <!-- Medical Conditions -->
                        <div class="mb-4">
                            <label asp-for="MedicalConditions" class="form-label fw-semibold">Medical Conditions</label>
                            <textarea asp-for="MedicalConditions" class="form-control" placeholder="Enter any medical conditions" rows="4"></textarea>
                            <span asp-validation-for="MedicalConditions" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary w-100 py-2">Add Pet</button>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <p class="text-muted mb-0">
						Want to see your pets? <a class="text-primary fw-bold text-decoration-none" asp-controller="Pet" asp-action="ViewPets">
							View Pets
						</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
