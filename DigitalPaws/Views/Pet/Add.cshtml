@model Pet

@{
	ViewData["Title"] = "Add a New Pet";
}

<div class="container mt-4">
	<h2 class="mb-4">Add a New Pet</h2>

	<form asp-action="Add" method="post" enctype="multipart/form-data">
		<div class="mb-3">
			<label asp-for="Name" class="form-label">Pet Name</label>
			<input asp-for="Name" class="form-control" required />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<label asp-for="Category" class="form-label">Category</label>
			<select asp-for="Category" class="form-control">
				@foreach (var category in ViewBag.Categories)
				{
					<option value="@category">@category</option>
				}
			</select>
			<span asp-validation-for="Category" class="text-danger"></span>
		</div>
		<div class="form-group mb-3">
			<label asp-for="DisplayPictureUrl" class="form-label">Profile Picture (Optional)</label>
			<input type="file" asp-for="DisplayPictureUrl" class="form-control" />
			<span asp-validation-for="DisplayPictureUrl" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="MedicalConditions" class="form-label">Medical Conditions</label>
			<textarea asp-for="MedicalConditions" class="form-control"></textarea>
			<span asp-validation-for="MedicalConditions" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-primary">Add Pet</button>
	</form>
</div>
