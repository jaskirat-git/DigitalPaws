@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewData["Title"] -  DigitalPaws</title>

	<!-- Bootstrap CSS -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

	<!-- Custom CSS (Optional) -->
	<link href="~/css/site.css" rel="stylesheet">
</head>
<body>
	<!-- Navbar -->
	<nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
		<div class="container">
			<a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
				<img src="images/Dog Side top logo.png" alt="Logo" class="img-thumbnail" style="border: 5px solid #007bff; border-radius: 50%; box-shadow: 0 0 15px #007bff; width: 100px; height: 100px;" onmouseover="this.style.transform='scale(1.1)'" onmouseout="this.style.transform='scale(1)'" transform="translate(-50%, 0)" width="70" height="70">
				<span class="fs-4 fw-bold">DigitalPaws</span>
			</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav ms-auto">
					@if (HttpContextAccessor.HttpContext.Session.GetInt32("UserId") != null)
					{
						<!-- User is logged in -->
						<li class="nav-item">
							<a class="nav-link text-primary" asp-controller="Account" asp-action="Profile">Profile</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-primary" asp-controller="Pet" asp-action="Add">Add Pet</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-primary" asp-controller="Pet" asp-action="ViewPets">View Pets</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-primary" asp-controller="Chat" asp-action="ChatBox">Chat</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-danger" asp-controller="Account" asp-action="Logout">Logout</a>
						</li>
					}
					else
					{
						<!-- User is not logged in -->
						<li class="nav-item">
							<a class="nav-link text-primary fw-bold px-3 py-2 rounded shadow-sm" asp-controller="Account" asp-action="Login">
								<i class="fas fa-sign-in-alt me-2"></i>Login
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-success fw-bold px-3 py-2 rounded shadow-sm" asp-controller="Account" asp-action="Register">
								<i class="fas fa-user-plus me-2"></i>Register
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-info fw-bold px-3 py-2 rounded shadow-sm" asp-controller="Chat" asp-action="GeneralChat">
								<i class="fas fa-comments me-2"></i>Chatbox
							</a>
						</li>
					}
				</ul>
			</div>
		</div>
	</nav>

	<!-- Main Content -->
	 @* <div class="container mt-5">
	 	<div class="card shadow p-4"> *@
			
		@RenderBody()
	 	@* </div>
	 </div> *@

	<!-- Footer -->
	<footer class="bg-light text-center text-lg-start mt-5 border-top">
		<div class="text-center p-3">
			© @DateTime.Now.Year <strong>DigitalPaws</strong> | All Rights Reserved
		</div>
	</footer>

	<!-- Bootstrap JS and dependencies -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
