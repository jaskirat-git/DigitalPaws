@{
    ViewData["Title"] = "Contact Support";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        body {
            background: linear-gradient(to right, #6a11cb, #2575fc);
            color: #fff;
            font-family: 'Roboto', sans-serif;
        }

        .card {
            border: none;
            border-radius: 15px;
        }

        .form-control:focus {
            border-color: #6a11cb;
            box-shadow: 0 0 8px rgba(106, 17, 203, 0.5);
        }

        .btn-primary {
            background-color: #6a11cb;
            border: none;
        }

            .btn-primary:hover {
                background-color: #4c0f91;
            }

        .btn-secondary {
            background-color: #343a40;
            border: none;
        }

            .btn-secondary:hover {
                background-color: #4c0f91;
            }

        .btn-sm {
            font-size: 0.875rem;
        }

        .container {
            padding-top: 2rem;
        }

        .form-container {
            background-color: white;
            border-radius: 15px;
            padding: 3rem;
        }

        h2 {
            color: #6a11cb;
        }

        .alert {
            font-size: 1rem;
            font-weight: bold;
        }

        .form-label {
           color:#6a11cb;
            font-weight: bold;
        }

        footer {
            text-align: center;
            position: fixed;
            bottom: 0;
            width: 100%;
            padding: 10px 0;
            background: white;
            color: black;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <h2 class="text-center mb-4">Contact Support</h2>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
            }

            <form asp-action="SubmitSupportRequest" method="post">
                <div class="mb-3">
                    <label class="form-label">Full Name</label>
                    <input type="text" name="FullName" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" name="Email" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Subject</label>
                    <input type="text" name="Subject" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Message</label>
                    <textarea name="Message" class="form-control" rows="5" required></textarea>
                </div>

                <button type="submit" class="btn btn-primary w-100">Send Message</button>
            </form>

            <div class="text-center mt-4">
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Home</a>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
